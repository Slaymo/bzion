{% extends 'layout.html.twig' %}

{% block title %}League Administration{% endblock %}

{% block pageTitle %}
    <h1>League Administration</h1>
{% endblock %}

{% block content %}
    <section class="o-container">
        {% for section in role_sections %}
            <section class="o-section">
                <p class="c-button c-button--{{ section.role.displayColor }} c-button--skinny c-button--no-click c-button--no-hover">
                    {% if section.role.displayIcon is not null %}
                        <i class="fa {{ section.role.displayIcon }}"></i>
                    {% endif %}

                    <span>{{ section.role.displayName }}</span>
                </p>
            </section>

            <section class="o-row o-section c-rollcall">
                {% for player in section.members %}
                    {% include "Player/widget.html.twig" with {
                        player: player,
                        data: {
                            callsign: "username",
                            iso: "country.iso",
                            country: "country.name"
                        }}
                    %}
                {% endfor %}
            </section>
        {% endfor %}
    </section>
{% endblock %}