{% extends 'layout.html.twig' %}

{% set opengraph = {
    url: article.url | canonical,
    type: 'article',
    title: article.name,
    description: article.content | replace('\n', ' ') | truncate(100),
    image: asset('assets/imgs/open-graph.jpg') | canonical
} %}

{% set pageButtons = [
    {
        'color': 'grey',
        'url': article.url('edit'),
        'icon': 'pencil',
        'text': 'Edit',
        'condition': me.canEdit(article)
    },
    {
        'color': 'red',
        'url': article.url('delete'),
        'icon': 'trash-o',
        'text': 'Delete',
        'condition': me.canDelete(article)
    }
] %}

{% block title %}News{% endblock %}

{% block pageTitle %}
    <h1>
        League News
        {% if category %}
            in '{{ category.name }}' category
        {% endif %}
    </h1>
{% endblock %}

{% block content %}
    <section class="o-container o-section">
        <section class="o-row">
            {% include "News/categories.html.twig" %}

            <section class="o-col--main">
                {% include "News/article.html.twig" with { 'article': article } %}
            </section>
        </section>
    </section>
{% endblock %}
