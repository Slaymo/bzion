{% import _self as self %}
{% import 'Message/utilities.html.twig' as msgutils %}

{% extends 'Message/layout.html.twig' %}

{% set pageButtons = [
    {
        'color': 'blue',
        'url': path('message_list'),
        'icon': 'inbox',
        'text': 'Inbox',
        'condition': true
    },
    {
        'color': 'blue',
        'url': path('message_compose'),
        'icon': 'pencil',
        'text': 'Compose',
        'condition': me.hasPermission(constant('Permission::SEND_PRIVATE_MSG'))
    }
] %}

{% set viewTitle = "Subject: " ~ conversation.subject %}
{% set pageWideCSS = "s-fullflex" %}

{% macro conversation_action(id, form, input, action) %}
    <div id="{{ id }}" class="c-messenger__option collapsible-entity">
        {{ form_start(form) }}
            {{ form_errors(form) }}

            <div class="c-messenger__option__action">
                <p class="c-messenger__option__action__close collapsible-close" data-close="#{{ id }}">
                    <i class="fa fa-close"></i>
                </p>

                {{ form_row(input, {
                    'container_attr': {
                        'class': 'c-messenger__option__action__input'
                    }
                }) }}

                {{ form_row(action, {
                    'container_attr': {
                        'class': 'c-messenger__option__action__buttons'
                    }
                }) }}
            </div>

            {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
{% endmacro %}

{% block messages_body %}
    <div class="c-messenger">
        <section class="c-messenger__toolbar bb pb2">
            <div class="row">
                <div class="col-md-8">
                    <p class="mb0">Conversation with {{ msgutils.listMembers(conversation.members, true) }}</p>
                </div>
                <div class="col-md-4 text-right">
                    {% if me.canEdit(conversation) %}
                        <button data-toggle="#InviteForm" title="Invite players to the conversation">
                            <i class="fa fa-user-plus" aria-hidden="true" ></i>
                            <span class="sr-only">Invite players to the conversation</span>
                        </button>

                        <button data-toggle="#RemovePlayer" title="Remove a player from the conversation">
                            <i class="fa fa-user-times" aria-hidden="true"></i>
                            <span class="sr-only">Remove a player from the conversation</span>
                        </button>

                        <button data-toggle="#SubjectRenameForm" title="Rename conversation">
                            <i class="fa fa-pencil" aria-hidden="true"></i>
                            <span class="sr-only">Rename conversation</span>
                        </button>
                    {% endif %}

                    {% if me.canEdit(me.team) and conversation.isMember(me.team) %}
                        <a href="{{ conversation.url('team_refresh') }}" title="Add new team members to conversation">
                            <i class="fa fa-plus-square-o" aria-hidden="true"></i>
                            <span class="sr-only">Add new team members to conversation</span>
                        </a>
                        <a href="{{ conversation.url('team_leave') }}" title="Remove {{ me.team.name }} from conversation">
                            {# TODO: Find a better icon #}
                            <i class="fa fa-bolt" aria-hidden="true"></i>
                            <span class="sr-only">Remove {{ me.team.name }} from conversation</span>
                        </a>
                    {% endif %}

                    {% if me ~/~ conversation.creator and (not conversation.isTeamMember(me) or me.team.leader ~~ me) %}
                        <a href="{{ conversation.url('leave') }}" title="Leave conversation">
                            <i class="fa fa-sign-out" aria-hidden="true"></i>
                            <span class="sr-only">Leave conversation</span>
                        </a>
                    {% endif %}
                </div>
            </div>

            {% if me.canEdit(conversation) %}
                {{ self.conversation_action("SubjectRenameForm", renameForm, renameForm.subject, renameForm.Rename) }}
                {{ self.conversation_action("InviteForm", inviteForm, inviteForm.players, inviteForm.Invite) }}
            {% endif %}
        </section>

        <section id="messageView" class="c-messenger__viewer">
            {% include 'Message/messages.html.twig' %}

            <noscript>
                <div class="c-messenger__conversation__archiver">
                    <a href="{{ path('message_conversation_show', {conversation: conversation.id, end: (messages|first).id }) }}">
                        <i class="fa fa-refresh" aria-hidden="true"></i>
                        <span>Load more recent messages</span>
                    </a>
                </div>
            </noscript>
        </section>

        <section class="c-messenger__editor bt pt2">
            {{ form_start(form, {
                attr: {
                    class: 'c-messenger__conversation__response',
                    autocomplete: 'off'
                }
            }) }}
                {{ form_errors(form) }}

                {{ form_widget(form.message, {
                    id: 'composeArea',
                    attr: {
                        autofocus: 'autofocus',
                        class: 'input_compose_area',
                        placeholder: 'Enter your message here...'
                    }
                }) }}

                {{ form_row(form.Send, {
                    id: 'composeButton',
                    attr: {
                        'data-style': 'expand-right'
                    }
                }) }}
            {{ form_end(form) }}
        </section>
    </div>
{% endblock %}
