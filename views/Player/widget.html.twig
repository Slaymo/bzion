{% from 'utilities.html.twig' import html_attr %}

{% set attrs = attrs | extend_hash({ 'class': ['c-player-badge'] }) %}

<div {{ html_attr(attrs) }} >
    <img class="c-player-badge__avatar"
         src="{{ player.avatar | imagine_filter('small_thumb') }}"
         alt="{{ player.name }}'s avatar"
    >

    <div>
        <p class="c-player-badge__callsign">{{ link_to(player) }}</p> {{ player.country.flagLiteral | raw }}

        {% if showTeam %}
            <p class="c-player-badge__team">{{ link_to(player.team) }}</p>
        {% endif %}
    </div>
</div>
