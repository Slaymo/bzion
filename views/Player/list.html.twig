{% extends 'layout.html.twig' %}

{% set scopeClass = "s-player-list" %}

{% block title %}Players{% endblock %}

{% block pageTitle %}
    <h1>Player List</h1>
{% endblock %}

{% block content %}
    <section class="o-container c-roll-call">
        <section class="o-row">
            {% for player in players %}
                {% include "player-badge.html.twig" with {
                    css: 'o-col--third',
                    player: player,
                    showTeam: true,
                    data: {
                        callsign: "username",
                        teamid: "team.id",
                        team: "team.name",
                        iso: "country.iso",
                        country: "country.name"
                    }}
                %}
            {% endfor %}
        </section>
    </section>
{% endblock %}
