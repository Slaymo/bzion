{% extends 'layout.html.twig' %}

{% set scopeClass = "s-newsstand" %}
{% set pageButtons = [
    {
        'color': 'blue',
        'url': path('news_new'),
        'icon': 'plus',
        'text': 'Post New',
        'condition': me.canCreate("News")
    }
] %}

{% block title %}
    {% if category %}
        News :: {{ category.name }}
    {% else %}
        News
    {% endif %}
{% endblock %}

{% block pageTitle %}
    <h1>
        League News
        {% if category %}
            in '{{ category.name }}' category
        {% endif %}
    </h1>
{% endblock %}

{% block content %}
    <section class="o-container">
        <section class="o-row">
            {% include "News/categories.html.twig" %}

            <section class="o-col--main">
                {% for article in news %}
                    {% include "News/article.html.twig" with { 'article': article } %}
                {% endfor %}

                {% include "pagination.html.twig" with { 'totalPages': totalPages, 'currentPage': currentPage } %}
            </section>
        </section>
    </section>
{% endblock %}
