{% import _self as navbar %}

{% macro badge(number, type) %}
    <span class="c-badge {{ type }}">
        {% if number %}
            {{ number }}
        {% endif %}
    </span>
{% endmacro %}

{% macro page(text, controller_name, path, icon, class) %}
    <li class="{{ class | default('') }} {{ app.controller.name == controller_name ? 'active' }}" >
        <a href="{{ path(path) }}">
            <i class="fa fa-{{ icon }} fa-fw"></i> {{ text }}
        </a>
    </li>
{% endmacro %}

{% macro userOptions() %}
    {% import _self as navbar %}

    {{ navbar.page(
        navbar.badge(me.countUnreadNotifications, "unreadNotificationCount"),
        'Notification', 'notification_list', 'bell', 'c-useroptions'
    )}}
    {{ navbar.page(
        navbar.badge(me.countUnreadMessages, "unreadMessageCount"),
        'Message', 'message_list', 'comments-o', 'c-useroptions'
    )}}
    {{ navbar.page(
        null,
        'Profile', 'profile_edit', 'gear', 'c-useroptions'
    )}}
{% endmacro %}

<nav class="c-navigation">
    <ul id="menu-pages" class="c-menulinks">
        {{ navbar.page('News', 'News', 'news_list', 'thumb-tack')}}
        {{ navbar.page('Teams', 'Team', 'team_list', 'users')}}
        {{ navbar.page('Players', 'Player', 'player_list', 'user')}}
        {{ navbar.page('Matches', 'Match', 'match_list', 'trophy')}}

        <li class="c-useroptions">
            <hr>
            <ul>
                {{ navbar.userOptions() }}
            </ul>
        </li>

        {% if pageButtons is not null %}
            <li class="u-mobile-only"><hr></li>

            {% for button in pageButtons if button.condition %}
                <li class="u-mobile-only">
                    <a href="{{ button.url }}">
                        <i class="fa fa-{{ button.icon }} fa-fw"></i> {{ button.text }}
                    </a>
                </li>
            {% endfor %}
        {% endif %}
    </ul>

    <ul class="c-menuoptions">
        {% if me is valid %}
            {{ navbar.userOptions() }}

            <li>
                <a href="{{ path('logout') }}">
                    <i class="fa fa-sign-out"></i> Logout
                </a>
            </li>
        {% else %}
            <li>
                <a href="{{ loginUrl }}">
                    <i class="fa fa-sign-in"></i> Login/Register
                </a>
            </li>
        {% endif %}
    </ul>
</nav>
