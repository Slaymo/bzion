{% extends 'layout.html.twig' %}

{% block content %}
    <main class="c-page">
        <section class="c-page__header">
            <div class="c-page__header__container">
                <section class="c-page__header__container__title">
                    <h1>Action Confirmation</h1>
                </section>
            </div>
        </section>

        {{ form_start(form, { 'attr': { 'class': 'c-form o-container u-text-center' } }) }}
            <section class="c-form__section">
                {{ message | raw }}
            </section>

            <section class="c-form__section">
                <div class="c-form__buttons">
                    {{ form_rest(form) }}
                </div>
            </section>
        {{ form_end(form) }}
    </main>
{% endblock %}
