{% extends 'layout.html.twig' %}

{% from 'Player/widget.html.twig' import widget as player_widget %}

{% block title %}League Administration{% endblock %}

{% block pageTitle %}
    <h1>League Administration</h1>
{% endblock %}

{% block content %}
    <div class="container mb-last-reset">
        {% for section in role_sections %}
            <section class="mb2">
                <h2 class="c-button c-button--{{ section.role.displayColor }} c-button--skinny c-button--no-click c-button--no-hover m0">
                    {% if section.role.displayIcon is not null %}
                        <i class="fa {{ section.role.displayIcon }}" aria-hidden="true"></i>
                    {% endif %}

                    <span>{{ section.role.displayName }}</span>
                </h2>

                <div class="row">
                    {% for player in section.members %}
                        <div class="col-sm-6 col-md-4 col-lg-3 mt2">
                            {{ player_widget(player, {
                                data: {
                                    callsign: "username",
                                    iso: "country.iso",
                                    country: "country.name"
                                }
                            }) }}
                        </div>
                    {% endfor %}
                </div>
            </section>
        {% endfor %}
    </div>
{% endblock %}
